{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "vi-compare.publish (v1)",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "host",
    "raw_artifacts",
    "status"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": [
        "v1"
      ]
    },
    "run_id": {
      "type": "string"
    },
    "created_utc": {
      "type": "string",
      "format": "date-time"
    },
    "host": {
      "type": "object",
      "required": [
        "machine",
        "os",
        "labview_version"
      ],
      "properties": {
        "machine": {
          "type": "string"
        },
        "os": {
          "type": "string"
        },
        "labview_version": {
          "type": "string"
        },
        "labviewcli": {
          "type": "string"
        },
        "lvcompare_version": {
          "type": "string"
        }
      }
    },
    "compare_summary": {
      "type": "object",
      "properties": {
        "total_pairs": {
          "type": "integer"
        },
        "completed": {
          "type": "integer"
        },
        "failed": {
          "type": "integer"
        },
        "skipped": {
          "type": "integer"
        },
        "duration_sec": {
          "type": "number"
        }
      }
    },
    "raw_artifacts": {
      "type": "object",
      "required": [
        "primary_dir"
      ],
      "properties": {
        "primary_dir": {
          "type": "string"
        },
        "alt_dir": {
          "type": "string"
        },
        "checksums": {
          "type": "string"
        }
      }
    },
    "session_index_file": {
      "type": "string"
    },
    "logs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "ok",
        "partial",
        "error"
      ]
    },
    "notes": {
      "type": "string"
    }
  }
}