{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "session-index (v1)",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "pairs"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": [
        "v1"
      ]
    },
    "run_id": {
      "type": "string"
    },
    "pairs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "pair_id",
          "baseline",
          "candidate",
          "lvcompare"
        ],
        "properties": {
          "pair_id": {
            "type": "string"
          },
          "baseline": {
            "type": "string"
          },
          "candidate": {
            "type": "string"
          },
          "lvcompare": {
            "type": "object",
            "properties": {
              "html_report": {
                "type": "string"
              },
              "json_report": {
                "type": "string"
              },
              "log": {
                "type": "string"
              },
              "exit_code": {
                "type": "integer"
              }
            }
          },
          "captures": {
            "type": "object",
            "properties": {
              "baseline_fp_png": {
                "type": "string"
              },
              "candidate_fp_png": {
                "type": "string"
              },
              "baseline_bd_png": {
                "type": "string"
              },
              "candidate_bd_png": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}