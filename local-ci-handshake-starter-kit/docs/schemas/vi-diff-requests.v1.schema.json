{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "vi-diff-requests (v1)",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "pairs"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": [
        "v1"
      ]
    },
    "run_id": {
      "type": "string"
    },
    "labview": {
      "type": "object",
      "properties": {
        "target_version": {
          "type": "string"
        },
        "compare_options": {
          "type": "object",
          "additionalProperties": {
            "type": "boolean"
          }
        }
      }
    },
    "pairs": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "pair_id",
          "baseline",
          "candidate"
        ],
        "properties": {
          "pair_id": {
            "type": "string"
          },
          "baseline": {
            "type": "object",
            "required": [
              "path"
            ],
            "properties": {
              "path": {
                "type": "string"
              }
            }
          },
          "candidate": {
            "type": "object",
            "required": [
              "path"
            ],
            "properties": {
              "path": {
                "type": "string"
              }
            }
          },
          "labels": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "render_hints": {
      "type": "object",
      "additionalProperties": {
        "type": "boolean"
      }
    }
  }
}