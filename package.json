{
  "name": "icon-editor-lab",
  "version": "0.1.0-rc.0",
  "private": true,
  "description": "Local CI, dev-mode, and release tooling for the Icon Editor Lab repo",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/LabVIEW-Community-CI-CD/icon-editor-lab.git"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "packageManager": "npm@11.6.2",
  "scripts": {
    "priority:sync": "node ./src/tools/priority/sync-standing-priority.mjs",
    "priority:show": "node ./src/tools/priority/show-router.mjs",
    "priority:test": "node --test ./src/tools/priority/__tests__",
    "priority:policy": "node ./src/tools/priority/check-policy.mjs",
    "priority:validate": "node ./src/tools/priority/dispatch-validate.mjs",
    "priority:handoff": "node ./src/tools/priority/standing-priority-handoff.mjs",
    "priority:handoff-tests": "node ./src/tools/priority/run-handoff-tests.mjs",
    "hooks:plane": "node ./src/tools/hooks/core/plane-info.mjs",
    "hooks:preflight": "node ./src/tools/hooks/core/preflight.mjs",
    "hooks:pre-commit": "node ./src/tools/hooks/core/pre-commit.mjs",
    "hooks:pre-push": "node ./src/tools/hooks/core/pre-push.mjs",
    "hooks:multi": "node ./src/tools/hooks/core/run-multi.mjs",
    "hooks:schema": "node ./src/tools/hooks/core/validate-summaries.mjs",
    "hooks:test": "node --test ./src/tools/hooks/__tests__",
    "lint:md:changed": "node ./src/tools/lint-markdown.mjs",
    "lint:md:all": "node ./src/tools/lint-markdown.mjs --all",
    "semver:check": "node ./src/tools/priority/validate-semver.mjs",
    "release:branch": "node ./src/tools/priority/create-release-branch.mjs",
    "release:branch:dry": "node ./src/tools/priority/create-release-branch.dryrun.mjs",
    "release:finalize": "node ./src/tools/priority/finalize-release.mjs",
    "release:finalize:dry": "node ./src/tools/priority/finalize-release.dryrun.mjs",
    "feature:branch:dry": "node ./src/tools/priority/create-feature-branch.dryrun.mjs",
    "feature:finalize:dry": "node ./src/tools/priority/finalize-feature.dryrun.mjs",
    "derive:env": "node ./src/tools/dev/derive-env.mjs",
    "build": "tsc -p tsconfig.cli.json",
    "build:watch": "tsc -p tsconfig.cli.json --watch",
    "generate:outputs": "node ./dist/tools/generate-action-outputs.js",
    "generate:schemas": "node ./dist/tools/schemas/generate-schemas.js",
    "schemas:validate": "node ./dist/tools/schemas/validate-json.js",
    "cli:validate": "node ./dist/tools/cli/validate-cli.js",
    "test-discovery": "node ./dist/tools/test-discovery.js",
    "dev:watcher:status": "pwsh -NoLogo -NoProfile -File ./src/tools/Dev-WatcherManager.ps1 -Status",
    "dev:watcher:trim": "pwsh -NoLogo -NoProfile -File ./src/tools/Dev-WatcherManager.ps1 -Trim",
    "dev:watcher:ensure": "pwsh -NoLogo -NoProfile -File ./src/tools/Dev-WatcherManager.ps1 -Ensure",
    "dev:watcher:stop": "pwsh -NoLogo -NoProfile -File ./src/tools/Dev-WatcherManager.ps1 -Stop"
  },
  "devDependencies": {
    "@types/argparse": "^2.0.17",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.16.5",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "argparse": "^2.0.1",
    "chokidar": "^3.6.0",
    "fast-glob": "^3.3.2",
    "js-yaml": "^4.1.0",
    "markdownlint-cli2": "^0.15.0",
    "typescript": "^5.6.3",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.1"
  }
}
